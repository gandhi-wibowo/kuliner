<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#c52b2e" />
        <gradient  android:angle="-90"  android:startColor="#a10508" android:endColor="#d6080b"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#c52b30" />
        <solid  android:color="#e01e21"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#c52b2e" />
        <gradient  android:angle="-90"  android:startColor="#ff525e" android:endColor="#e01e28" />
    </shape>
</item>
</selector>